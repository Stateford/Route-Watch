<Window x:Class="Route_Watch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Route_Watch"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListView HorizontalAlignment="Left" Height="310" Margin="25,45,0,0" VerticalAlignment="Top" Width="655" SelectionMode="Multiple">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="IP Address"/>
                    <GridViewColumn Header="Hostname"/>
                    <GridViewColumn Header="PL%"/>
                    <GridViewColumn Header="Errors"/>
                    <GridViewColumn Header="Avg"/>
                    <GridViewColumn Header="Min"/>
                    <GridViewColumn Header="Max"/>
                    <GridViewColumn Header="Ping"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
